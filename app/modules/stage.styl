.search
  display inline-flex
  flex-flow row wrap
  justify-content flex-start

.search input
  padding 0 .5rem
  height 2rem
  background white
  border-radius .5rem 0 0 .5rem
.serach-icon
  width 2rem
  height 2rem
  background white
  border-radius 0 .5rem .5rem 0

.bookshelf-showing
  padding .5rem


.pgs
  display inline-flex
  flex-flow row wrap
  border-radius 1.25rem

.pg
  background white
  height 2.5rem
  width 2.5rem
  &.active
    text-decoration underline
    background-color #eee
  &:first-child
    border-radius 50% 0 0 50%
  &:last-child
    border-radius 0 50% 50% 0











.searchbox
  input
    width 200px
    padding .5rem 0
  > *
    background white
  &-search
    padding .5rem
    border-radius .3rem 0 0 .3rem
  &-clear
    padding .5rem
    border-radius 0 .3rem .3rem 0

