.searchbox
  border 1px solid #c9c9c9
.pl-place
  background white
  width 200px
  padding .5rem 0 .5rem .5rem
  line-height 1.3
  text-align right
.pl-edit
  padding .5rem
  background white
  align-items baseline

.pl-edit-text
  margin-left .25rem
  border-bottom .2rem solid black



@keyframes rotate360
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

.spinner
  width 4rem
  height 4rem
  path
    fill rgb(110,49,36)
    transform-origin 50%
    animation .7s rotate360 infinite linear

.loader
  width 4rem
  height 4rem
  rect
    fill white

.layout-fullscreen
  width 100%
  height calc(100% - 3rem)
